{% extends 'public.html.twig' %}

{% block meta_description %}
    <meta name="description" content="Read our blog and get the latest news about our services and projects.">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {% include "public/partials/header-invers.html.twig" %}
{% endblock %}

{% block content %}

    <!-- blog details area start  -->
    <section class="blog-details-area">
        <div class="blog-details-area-inner section-spacing-top">
            <div class="container large">
                <div class="section-header fade-anim">
                    <div class="section-title-wrapper">
                        <div class="title-wrapper">
                            <h2 class="section-title font-sequelsans-romanbody">{{ blog.title }}</h2>
                        </div>
                    </div>
                    <div class="meta">
                        <span class="name">By <span>{{ blog.author }}</span></span>
                        {% for category in blog.blogCategories %}
                            <span class="tag has-left-line">{{ category.name }}</span>
                        {% endfor %}
                        <span class="date has-left-line">{{ blog.created|format_datetime('short', 'none') }}</span>
                    </div>
                </div>
            </div>
            <div class="image-wrapper parallax-view fade-anim">
                <img class="w-100" src="{{ blog_image(blog) | imagine_filter('blog_1920') }}" alt="image" data-speed="0.8">
            </div>
            <div class="container">
                <div class="section-details fade-anim">
                    <div class="text-wrapper">
                        <div class="text">{{ blog.content()|raw }}</div>
                    </div>
                </div>
            </div>

        </div>
    </section>
    <!-- blog details area end  -->

    <!-- blog area start  -->
    <section class="blog-area-3">
        <div class="container large">
            <div class="blog-area-3-inner section-spacing-top">
                <div class="section-header fade-anim">
                    <div class="section-title-wrapper">
                        <div class="subtitle-wrapper">
                            <span class="section-subtitle">Recent blog</span>
                        </div>
                        <div class="title-wrapper">
                            <h2 class="section-title font-sequelsans-romanbody">Read more related
                                news</h2>
                        </div>
                    </div>
                </div>
                <div class="blogs-wrapper-box">
                    <div class="blogs-wrapper">

                        {% for blog in blogs %}

                            <a href="{{ url('homepage_blog_details', {'id': blog.id}) }}">
                                <article class="blog fade-anim" data-delay="{{ cycle(['0.45','0.60','0.75','0.45','0.60'], loop.index0) }}">
                                    <div class="thumb">
                                        <img src="{{ blog_image(blog) | imagine_filter('blog_780') }}" alt="blog image">
                                    </div>
                                    <div class="content-wrapper">
                                        <div class="content">
                                            <h2 class="title">{{ blog.title }}
                                                <span class="arrow">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 13 14" fill="none">
                                                        <path fill-rule="evenodd" clip-rule="evenodd"
                                                              d="M8.98834 0.661257C8.91884 0.781628 8.85302 0.903885 8.79094 1.02786C8.47298 1.49122 8.0835 1.90234 7.63629 2.2455C7.07879 2.67328 6.4425 2.98707 5.76373 3.16894C5.08497 3.35082 4.37702 3.39722 3.68033 3.3055C2.98363 3.21377 2.31182 2.98572 1.70325 2.63437L0.869521 4.07843C1.66772 4.53928 2.54888 4.83839 3.46268 4.95869C4.37648 5.079 5.30502 5.01814 6.1953 4.77959C6.36565 4.73394 6.53397 4.68196 6.6999 4.62381L2.03475 12.7041L3.47584 13.5361L8.16052 5.42201C8.19489 5.61171 8.23713 5.80022 8.28719 5.98704C8.52574 6.87732 8.9373 7.71189 9.49839 8.44311C10.0595 9.17433 10.7591 9.78788 11.5573 10.2487L12.391 8.80466C11.7825 8.4533 11.2491 7.98552 10.8213 7.42803C10.3935 6.87053 10.0797 6.23423 9.89783 5.55547C9.71595 4.8767 9.66955 4.16876 9.76128 3.47206C9.83484 2.91326 9.99611 2.37047 10.2384 1.86349C10.3146 1.74781 10.3875 1.62977 10.457 1.50948L10.4323 1.49521L10.4324 1.49499L8.98834 0.661257Z"
                                                              fill="#111111" />
                                                    </svg>
                                                    </span>
                                            </h2>
                                            <div class="meta">
                                                <span class="name">By <span>{{ blog.author }}</span></span>
                                                <span class="date has-left-line">{{ blog.created|format_datetime('short', 'none') }}</span>
                                            </div>
                                        </div>
                                    </div>
                                </article>
                            </a>

                        {% else %}
                            <div class="col-12">
                                <div class="text-center text-muted py-5">No blogs found.</div>
                            </div>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- blog area end  -->

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!--homepage init -->
    <script src="{{ asset('assets/js/pages/homepage.init.js') }}"></script>
{% endblock %}