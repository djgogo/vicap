{% extends 'public.html.twig' %}

{% block meta_description %}
    <meta name="description" content="Sieh Dir unsere erfolgreich umgesetzten Projekte an.">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}

    <div class="has-smooth" id="has_smooth"></div>
    <div id="smooth-wrapper">
        <div id="smooth-content">

            <main>

                <!-- page title area start  -->
                <section class="page-title-area">
                    <div class="container large">
                        <div class="page-title-area-inner section-spacing-top">
                            <div class="page-title-wrapper">
                                <h2 class="page-title fade-anim">Portfolio</h2>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- page title area end  -->

                <!-- work area start  -->
                <section class="work-area-work-page pb-5">
                    <div class="work-area-work-page-inner">
                        <div class="works-wrapper-box">
                            <div class="container large">
                                <div class="works-wrapper-2">

                                    {% if projects|length %}
                                        {% for project in projects %}
                                            <div class="work-box">
                                                <div class="thumb" data-cursor-text="View Project">
                                                    <a href="{{ path('homepage_portfolio_details', {'id': project.id}) }}"><img src="{{ portfolio_image(project) | imagine_filter('portfolio_440')  }}" alt="image"></a>
                                                </div>
                                                <div class="content">
                                                    <h3 class="title"><a href="{{ path('homepage_portfolio_details', {'id': project.id}) }}">{{ project.name }}</a></h3>
                                                    <div class="meta">
                                                        <span class="date">{{ project.created|date('d.m.Y') }}</span>
                                                        <span class="tag">{{ project.portfolioCategory.name }}</span>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    {% endif %}

                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- work area end  -->

            </main>

        </div>
    </div>

{% endblock %}

{% block javascripts %}

    <!--homepage init -->
    <script src="{{ asset('assets/js/pages/homepage.init.js') }}"></script>

    {{ parent() }}

{% endblock %}