{% extends 'app.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block main_content %}

    <div class="page-content">
        <div class="container-fluid">

            {{ include('partials/page-title.html.twig', {pagetitle: 'page_title.term_templates'|trans, title: 'page_title.privacy-policy'|trans }) }}

            {{ form_start(form, { 'action': path('admin_settings_term_templates_privacy_policy') }) }}

            <div class="row">
                {% for groupForm in form.groups %}
                    <div class="col-xxl-8">
                        <div class="card mb-4">
                            <div class="card-body">
                                {# Display the Template Name #}
                                <div class="d-flex align-items-center mb-4">
                                    <div class="flex-grow-1">
                                        <h5 class="card-title mb-0">
                                            {{ groupForm.name.vars.value | replace({'_': ' '}) | title }}
                                        </h5>
                                    </div>
                                </div>
                                {# Iterate over translations #}
                                {% for translationForm in groupForm.translations %}
                                    <div class="mb-3">
                                        <h6 class="bg-primary-subtle p-md-2"><strong>Locale: {{ translationForm.locale.vars.value }}</strong></h6>
                                        <div class="mb-3">
                                            {{ form_label(translationForm.content) }}
                                            {{ form_widget(translationForm.content, {'id': 'ckeditor-classic-' ~ loop.index}, {'attr': {'class': 'form-control needs-validation', 'rows': 30}}) }}
                                            {{ form_errors(translationForm.content) }}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <!--end card-->
                    </div>
                    <!--end col-->
                {% endfor %}
            </div>
            <!--end row-->

            <div class="col-lg-12">
                <!-- Submit Button -->
                <div class="form-group d-flex justify-content-end gap-3 mt-4">
                    <button type="submit" class="btn btn-dark right">Update</button>
                </div>
            </div>

            {{ form_row(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}

        </div>
        <!-- container-fluid -->
    </div>
    <!-- End Page-content -->

{% endblock %}

{% block javascripts %}

    <!-- validation init -->
    <script src="{{ asset('assets/js/pages/form-validation.init.js') }}"></script>

    <!-- ckeditor -->
    <script src="{{ asset('assets/libs/@ckeditor/ckeditor5-build-classic/build/ckeditor.js') }}"></script>
    <script src="{{ asset('assets/js/pages/ckeditor-config.init.js') }}"></script>

    <script>
        // ckeditor
        document.querySelectorAll('[id^="ckeditor-classic-"]').forEach(function(element) {
            ClassicEditor.create(element)
                .then(function(editor) {
                    editor.ui.view.editable.element.style.height = '200px';
                })
                .catch(function(error) {
                    console.error(error);
                });
        });
    </script>


    {{ parent() }}

{% endblock %}