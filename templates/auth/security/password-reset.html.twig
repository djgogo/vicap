{% extends 'public.html.twig' %}

{% block meta_description %}
    <meta name="robots" content="noindex, nofollow">
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets-front/css/auth.css') }}">
{% endblock %}

{% block content %}

    <div class="has-smooth" id="has_smooth"></div>
    <div id="smooth-wrapper">
        <div id="smooth-content">

            <main>

                <!-- login area start  -->
                <section class="contact-area-contact-page pb-130">
                    <div class="container">

                        {{ include('default/_flash_messages.html.twig') }}

                        <div class="section-spacing-top">

                            <div class="row justify-content-center">
                                <div class="col-md-8 col-lg-6 col-xl-5">
                                    <div class="card mt-4">

                                        <div class="card-body p-4 pb-2">
                                            <div class="text-center mt-2">
                                                <h5 class="text-primary">Forgot Password?</h5>
                                                <p class="text-muted">Reset Password</p>

                                                <lord-icon src="https://cdn.lordicon.com/rhvddzym.json" trigger="loop" colors="primary:#0ab39c" class="password-reset-icon" style="width: 120px; height: 120px;"></lord-icon>

                                            </div>

                                            <div class="alert alert-borderless alert-warning text-center mb-2 mx-2" role="alert">
                                                Enter your email address and we'll send you instructions!
                                            </div>
                                            <div class="w-100">

                                                {{ include('default/_flash_messages.html.twig') }}
                                                {{ form_errors(form) }}

                                                {% if error %}
                                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                                {% endif %}

                                                {{ form_start(form) }}
                                                <div class="form-group position-relative mb-3 mt-3">
                                                    {{ form_row(form.identity) }}
                                                    <span class="focus-border"></span>
                                                </div>

                                                <div class="text-center mt-3 mb-4">
                                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                                    {{ form_widget(form.submit) }}
                                                </div>
                                                {{ form_end(form) }}

                                            </div>
                                        </div>
                                        <!-- end card body -->
                                    </div>
                                    <!-- end card -->

                                    <div class="mt-3 text-center">
                                        <p class="mb-0" style="font-size: 14px;">Wait, I remember my password... <a href="{{ path('security_login') }}" class="fw-semibold text-primary text-decoration-underline"> Click here </a> </p>
                                    </div>

                                </div>
                            </div>
                            <!-- end row -->

                        </div>
                    </div>
                </section>
                <!-- contact area end  -->

            </main>

        </div>
    </div>

{% endblock %}

{% block javascripts %}

    {{ include('partials/vendor-scripts.html.twig') }}

    {{ parent() }}

{% endblock %}
