<div class="dropdown topbar-head-dropdown ms-1 header-item" id="notificationDropdown">
    <button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle shadow-none" id="page-header-notifications-dropdown" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-haspopup="true" aria-expanded="false">
        <i class='bx bx-bell fs-22'></i>
        <span class="position-absolute topbar-badge fs-10 translate-middle badge rounded-pill bg-danger">{{ unread_count }}<span class="visually-hidden">unread messages</span></span>
    </button>
    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-end p-0" aria-labelledby="page-header-notifications-dropdown">

        <div class="dropdown-head bg-primary bg-pattern rounded-top">
            <div class="p-3">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="m-0 fs-16 fw-semibold text-white"> Notifications </h6>
                    </div>
                    <div class="col-auto dropdown-tabs">
                        <span class="badge bg-light-subtle text-body fs-13"> {{ unread_count }} New</span>
                    </div>
                </div>
            </div>

            <div class="px-2 pt-2">
                <ul class="nav nav-tabs dropdown-tabs nav-tabs-custom" data-dropdown-tabs="true" id="notificationItemsTab" role="tablist">
                    <li class="nav-item waves-effect waves-light">
                        <a class="nav-link active" data-bs-toggle="tab" href="#all-noti-tab" role="tab" aria-selected="true">
                            All ({{ unread_count }})
                        </a>
                    </li>
                    <li class="nav-item waves-effect waves-light">
                        <a class="nav-link" data-bs-toggle="tab" href="#unread-tab" role="tab" aria-selected="false">
                            Unread
                        </a>
                    </li>
                    <li class="nav-item waves-effect waves-light">
                        <a class="nav-link" data-bs-toggle="tab" href="#read-tab" role="tab" aria-selected="false">
                            Read
                        </a>
                    </li>
                </ul>
            </div>

        </div>

        <div class="tab-content position-relative" id="notificationItemsTabContent">
            <div class="tab-pane fade show active py-2 ps-2" id="all-noti-tab" role="tabpanel">
                <div data-simplebar style="max-height: 300px;" class="pe-2">

                    {% for nr in notifications_all %}
                        {% set notification = nr.notification %}
                        {# Display notification differently if sender is null #}
                        {% if notification.sender is not null %}
                            <div class="text-reset notification-item d-block dropdown-item position-relative">
                                <div class="d-flex">
                                    <img src="{{ user_photo(notification.sender) }}" class="me-3 rounded-circle avatar-xs flex-shrink-0" alt="user-pic">
                                    <div class="flex-grow-1">
                                        {# Different routes for different roles #}
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a href="{{ path('admin_notification_mark_as_read', {'notificationId': notification.id}) }}" class="stretched-link">
                                        {% elseif is_granted('ROLE_CANDIDATE') %}
                                            <a href="{{ path('candidate_notification_mark_as_read', {'notificationId': notification.id}) }}" class="stretched-link">
                                        {% endif %}
                                            <h6 class="mt-0 mb-1 fs-13 fw-semibold">{{ notification.sender.displayName }}</h6>
                                        </a>
                                        <div class="fs-13 text-muted">
                                            <p class="mb-1">{{ notification.messageKey|trans(notification.parameters, 'notifications') }}</p>
                                        </div>
                                        <p class="mb-0 fs-11 fw-medium text-uppercase text-muted">
                                            <span><i class="mdi mdi-clock-outline pe-sm-1"></i>{{ notification.created|format_datetime('short', 'short') }}</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="text-reset notification-item d-block dropdown-item position-relative">
                                <div class="d-flex">
                                    <div class="avatar-xs me-3 flex-shrink-0">
                                <span class="avatar-title bg-danger-subtle text-danger rounded-circle fs-16">
                                    <i class='bx bx-message-square-dots'></i>
                                </span>
                                    </div>
                                    <div class="flex-grow-1">
                                        {# Different routes for different roles #}
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a href="{{ path('admin_notification_mark_as_read', {'notificationId': notification.id}) }}" class="stretched-link">
                                        {% elseif is_granted('ROLE_CANDIDATE') %}
                                            <a href="{{ path('candidate_notification_mark_as_read', {'notificationId': notification.id}) }}" class="stretched-link">
                                        {% endif %}
                                            <h6 class="mt-0 mb-2 fs-13 lh-base">{{ notification.messageKey|trans(notification.parameters, 'notifications') }}</h6>
                                        </a>
                                        <p class="mb-0 fs-11 fw-medium text-uppercase text-muted">
                                            <span><i class="mdi mdi-clock-outline pe-sm-1"></i>{{ notification.created|format_datetime('short', 'short') }}</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}

                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="my-3 text-center view-all">
                            <button id="admin-clear-all-btn" type="button" class="btn btn-soft-success waves-effect waves-light">Clear All <i class="ri-arrow-right-line align-middle"></i></button>
                        </div>
                    {% elseif is_granted('ROLE_CANDIDATE') %}
                        <div class="my-3 text-center view-all">
                            <button id="candidate-clear-all-btn" type="button" class="btn btn-soft-success waves-effect waves-light">Clear All <i class="ri-arrow-right-line align-middle"></i></button>
                        </div>
                    {% endif %}

                </div>
            </div>

            <div class="tab-pane fade py-2 ps-2" id="unread-tab" role="tabpanel" aria-labelledby="unread-tab">
                <div data-simplebar style="max-height: 300px;" class="pe-2">

                    {% for nr in notifications_unread %}
                        {% set notification = nr.notification %}
                        {# Display notification differently if sender is null #}
                        {% if notification.sender is not null %}
                            <div class="text-reset notification-item d-block dropdown-item position-relative">
                                <div class="d-flex">
                                    <img src="{{ user_photo(notification.sender) }}" class="me-3 rounded-circle avatar-xs flex-shrink-0" alt="user-pic">
                                    <div class="flex-grow-1">
                                        {# Different routes for different roles #}
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a href="{{ path('admin_notification_mark_as_read', {'notificationId': notification.id}) }}" class="stretched-link">
                                        {% elseif is_granted('ROLE_CANDIDATE') %}
                                            <a href="{{ path('candidate_notification_mark_as_read', {'notificationId': notification.id}) }}" class="stretched-link">
                                        {% endif %}
                                            <h6 class="mt-0 mb-2 fs-13 lh-base">{{ notification.messageKey|trans(notification.parameters, 'notifications') }}</h6>
                                        </a>
                                        <div class="fs-13 text-muted">
                                            <p class="mb-1">{{ notification.messageKey|trans(notification.parameters, 'notifications') }}</p>
                                        </div>
                                        <p class="mb-0 fs-11 fw-medium text-uppercase text-muted">
                                            <span><i class="mdi mdi-clock-outline pe-sm-1"></i>{{ notification.created|format_datetime('short', 'short') }}</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="text-reset notification-item d-block dropdown-item position-relative">
                                <div class="d-flex">
                                    <div class="avatar-xs me-3 flex-shrink-0">
                                <span class="avatar-title bg-danger-subtle text-danger rounded-circle fs-16">
                                    <i class='bx bx-message-square-dots'></i>
                                </span>
                                    </div>
                                    <div class="flex-grow-1">
                                        {# Different routes for different roles #}
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a href="{{ path('admin_notification_mark_as_read', {'notificationId': notification.id}) }}" class="stretched-link">
                                        {% elseif is_granted('ROLE_CANDIDATE') %}
                                            <a href="{{ path('candidate_notification_mark_as_read', {'notificationId': notification.id}) }}" class="stretched-link">
                                        {% endif %}
                                            <h6 class="mt-0 mb-2 fs-13 lh-base">{{ notification.messageKey|trans(notification.parameters, 'notifications') }}</h6>
                                        </a>
                                        <p class="mb-0 fs-11 fw-medium text-uppercase text-muted">
                                            <span><i class="mdi mdi-clock-outline pe-sm-1"></i>{{ notification.created|format_datetime('short', 'short') }}</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}

                </div>
            </div>

            <div class="tab-pane fade py-2 ps-2" id="read-tab" role="tabpanel" aria-labelledby="read-tab">
                <div data-simplebar style="max-height: 300px;" class="pe-2">

                    {% for nr in notifications_read %}
                        {% set notification = nr.notification %}
                        {# Display notification differently if sender is null #}
                        {% if notification.sender is not null %}
                            <div class="text-reset notification-item d-block dropdown-item position-relative">
                                <div class="d-flex">
                                    <img src="{{ user_photo(notification.sender) }}" class="me-3 rounded-circle avatar-xs flex-shrink-0" alt="user-pic">
                                    <div class="flex-grow-1">
                                        <a href="{{ notification.url }}" class="stretched-link">
                                            <h6 class="mt-0 mb-1 fs-13 fw-semibold">{{ notification.sender.displayName }}</h6>
                                        </a>
                                        <div class="fs-13 text-muted">
                                            <p class="mb-1">{{ notification.messageKey|trans(notification.parameters, 'notifications') }}</p>
                                        </div>
                                        <p class="mb-0 fs-11 fw-medium text-uppercase text-muted">
                                            <span><i class="mdi mdi-clock-outline pe-sm-1"></i>{{ notification.created|format_datetime('short', 'short') }}</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="text-reset notification-item d-block dropdown-item position-relative">
                                <div class="d-flex">
                                    <div class="avatar-xs me-3 flex-shrink-0">
                                <span class="avatar-title bg-danger-subtle text-danger rounded-circle fs-16">
                                    <i class='bx bx-message-square-dots'></i>
                                </span>
                                    </div>
                                    <div class="flex-grow-1">
                                        <a href="{{ notification.url }}" class="stretched-link">
                                            <h6 class="mt-0 mb-2 fs-13 lh-base">{{ notification.messageKey|trans(notification.parameters, 'notifications') }}</h6>
                                        </a>
                                        <p class="mb-0 fs-11 fw-medium text-uppercase text-muted">
                                            <span><i class="mdi mdi-clock-outline pe-sm-1"></i>{{ notification.created|format_datetime('short', 'short') }}</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}

                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="my-3 text-center view-all">
                            <button id="admin-clear-read-btn" type="button" class="btn btn-soft-success waves-effect waves-light">Clear All Read <i class="ri-arrow-right-line align-middle"></i></button>
                        </div>
                    {% elseif is_granted('ROLE_CANDIDATE') %}
                        <div class="my-3 text-center view-all">
                            <button id="candidate-clear-read-btn" type="button" class="btn btn-soft-success waves-effect waves-light">Clear All Read <i class="ri-arrow-right-line align-middle"></i></button>
                        </div>
                    {% endif %}

                </div>
            </div>

            <div class="notification-actions" id="notification-actions">
                <div class="d-flex text-muted justify-content-center">
                    Select <div id="select-content" class="text-body fw-semibold px-1">0</div> Result <button type="button" class="btn btn-link link-danger p-0 ms-3" data-bs-toggle="modal" data-bs-target="#removeNotificationModal">Remove</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // admin
    const adminBtnAll = document.getElementById('admin-clear-all-btn');
    if (adminBtnAll) {
        adminBtnAll.addEventListener('click', function(e) {
            e.preventDefault();
            fetch('{{ path("admin_notification_clear_all") }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
                .then(response => response.json())
                .then(data => {
                    if(data.success) {
                        location.reload();
                    } else {
                        console.error('Error clearing notifications');
                    }
                })
                .catch(error => console.error('Error:', error));
        });
    }
    // admin
    const adminBtn = document.getElementById('admin-clear-read-btn');
    if (adminBtn) {
        adminBtn.addEventListener('click', function(e) {
            e.preventDefault();
            fetch('{{ path("admin_notification_clear_all_read") }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
                .then(response => response.json())
                .then(data => {
                    if(data.success) {
                        location.reload();
                    } else {
                        console.error('Error clearing notifications');
                    }
                })
                .catch(error => console.error('Error:', error));
        });
    }
</script>
